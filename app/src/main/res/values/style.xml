<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTextView">
        <item name="android:background">@drawable/border_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="searchBar">
        <item name="android:hint">@string/search</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="navIcons">
        <item name="android:padding">5dp</item>
    </style>
    <style name="categoryTextView">
        <item name="android:background">@drawable/border_right_and_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="container">
        <item name="android:background">@drawable/border_top</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="filterTextView">
        <item name="textAllCaps">true</item>
    </style>
    <style name="shoppingTextView">
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="centeredTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="productName" parent="@style/centeredTextView">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textFontWeight">800</item>
    </style>
    <style name="productDescription" parent="@style/centeredTextView">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="centeredAndPaddedTextView" parent="@style/centeredTextView">
        <item name="android:padding">12dp</item>
    </style>
    <style name="productDetails">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="productDetailsHeader" parent="@style/productDetails">
        <item name="android:paddingTop">16dp</item>
    </style>
    <style name="productID" parent="@style/productDetails">
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>