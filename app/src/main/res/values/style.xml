<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTextView">
        <item name="android:background">@drawable/border_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="searchBar">
        <item name="android:hint">@string/search</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="navIcons">
        <item name="android:padding">5dp</item>
    </style>
    <style name="categoryTextView">
        <item name="android:background">@drawable/border_right_and_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="container">
        <item name="android:background">@drawable/border_top</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="filterTextView">
        <item name="textAllCaps">true</item>
    </style>
</resources>