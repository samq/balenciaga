<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="product" type="com.balenciaga.domains.Product" />
        <variable name="position" type="int" />
        <variable name="clickListener" type="com.balenciaga.adapters.ProductListener" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/productViewHolder"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:padding="1dp"
        android:onClick="@{() -> clickListener.onClick(product)}"
        app:productListBorders="@{position}" >

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/productImage"
            app:productListImage="@{product}"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:productListName="@{product}" />

            <TextView
                android:id="@+id/productPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:productListPrice="@{product}"/>

        </LinearLayout>
    </FrameLayout>
</layout>