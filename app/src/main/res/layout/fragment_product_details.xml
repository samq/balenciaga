<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="product" type="com.balenciaga.network.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProductDetailsFragment">

        <LinearLayout
            android:id="@+id/productDetailsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_and_top"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/productDetailsScrollView">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/shoppingTextView" />

            <TextView
                android:id="@+id/addToBagTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/shoppingTextView" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/productDetailsScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/productDetailsLinearLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productImagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:background="@drawable/border_bottom"
                    android:contentDescription="@string/productImage" />

                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:theme="@style/productName"/>

                <TextView
                    android:id="@+id/productDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:theme="@style/productDescription"/>

                <TextView
                    android:id="@+id/storeAvailabilityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/storeAvailability"
                    android:background="@drawable/border_bottom"
                    android:theme="@style/centeredAndPaddedTextView" />

                <TextView
                    android:id="@+id/shippingAndReturnsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shippingAndReturn"
                    android:background="@drawable/border_bottom"
                    android:theme="@style/centeredAndPaddedTextView" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>